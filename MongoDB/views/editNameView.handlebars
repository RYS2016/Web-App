<div class="table-responsive">
  <form method="post" action='/names/edit/{{data.id}}'>
    <table class="table table-condensed">
      <tbody>
        <tr>
          <th width="200">First Name </td>
          <td><input type="text" name="cfname" required 
                  value="{{data.firstName}}"></td>
        </tr>
        <tr>
          <th>LastName </td>
          <td><input type="text" name="clname" required size="40" 
                  value="{{data.lastName}}"></td>
        </tr>
              </tbody>
      <tfooter>
        <tr>
          <td></td>
          <td>
              <input type="submit" value="Save" class="btn btn-success">
              <input type="button" value="Cancel" class="btn btn-danger"
                  class="cancel" onclick="cancelAdd()">
          </td>
        </tr>
      </tfooter>
    </table>
  </form>
</div>
